{
  "name": "color-comands",
  "displayName": "Color Commands",
  "description": "VSCode extension to convert colors and perform other color operations, directly from the editor.",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "shvmeless",
  "author": {
    "name": "Luciano Aedo Puga",
    "url": "https://github.com/shvmeless"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shvmeless/vscode-color-commands.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "shvmeless.color-commands.to-hexadecimal",
        "title": "Color Commands: Convert to Hexadecimal"
      },
      {
        "command": "shvmeless.color-commands.to-rgb",
        "title": "Color Commands: Convert to RGB"
      },
      {
        "command": "shvmeless.color-commands.to-hsl",
        "title": "Color Commands: Convert to HSL"
      },
      {
        "command": "shvmeless.color-commands.set-hue",
        "title": "Color Commands: Set Hue"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "shvmeless.color-commands.to-hexadecimal",
          "when": "editorHasSelection || editorHasMultipleSelections"
        },
        {
          "command": "shvmeless.color-commands.to-rgb",
          "when": "editorHasSelection || editorHasMultipleSelections"
        },
        {
          "command": "shvmeless.color-commands.to-hsl",
          "when": "editorHasSelection || editorHasMultipleSelections"
        },
        {
          "command": "shvmeless.color-commands.set-hue",
          "when": "editorHasSelection || editorHasMultipleSelections"
        }
      ]
    }
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "colord": "^2.9.3"
  }
}
