{
  "name": "color-comands",
  "displayName": "Color Commands",
  "description": "VSCode extension to convert colors and perform other color operations, directly from the editor.",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "shvmeless",
  "author": {
    "name": "Luciano Aedo Puga",
    "url": "https://github.com/shvmeless"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shvmeless/vscode-color-commands.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": []
  },
  "menus": {
    "commandPalette": []
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
